        </section>

    </div>
    
    <script>
        document.addEventListener('alpine:init', () => {
            // Função para o gerador de soluções com IA
            Alpine.data('solutionGenerator', () => ({
                prompt: '',
                isLoading: false,
                result: '',
                error: '',
                async getSolution() {
                    if (!this.prompt.trim()) {
                        this.error = 'Por favor, descreva seu desafio de negócio.';
                        return;
                    }

                    this.isLoading = true;
                    this.result = '';
                    this.error = '';

                    const userPrompt = this.prompt;
                    const systemPrompt = `Você é um consultor de soluções de software sênior na empresa 'Phoenix Soluções'. Um cliente em potencial descreveu um desafio de negócio. Sua tarefa é sugerir uma solução de software de alto nível (como 'CRM Customizado', 'Sistema de Gestão de Logística', 'Portal do Cliente', etc.) que a Phoenix Soluções poderia construir. Explique brevemente como essa solução resolveria o desafio. Mantenha o tom profissional, prestativo e conciso. O desafio do cliente é: "${userPrompt}"`;

                    try {
                        let chatHistory = [];
                        chatHistory.push({ role: "user", parts: [{ text: systemPrompt }] });
                        const payload = { contents: chatHistory };
                        const apiKey = ""; // A chave da API é gerenciada pelo ambiente
                        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

                        const response = await fetch(apiUrl, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });

                        if (!response.ok) {
                            const errorBody = await response.text();
                            throw new Error(`Erro na API: ${response.statusText}. Detalhes: ${errorBody}`);
                        }

                        const data = await response.json();

                        if (data.candidates && data.candidates.length > 0 &&
                            data.candidates[0].content && data.candidates[0].content.parts &&
                            data.candidates[0].content.parts.length > 0) {
                            this.result = data.candidates[0].content.parts[0].text;
                        } else {
                            // Tenta extrair informações de erro do corpo da resposta, se houver
                            const errorDetails = data.error ? JSON.stringify(data.error) : 'Resposta vazia.';
                            throw new Error(`A resposta da API não continha o conteúdo esperado. Resposta recebida: ${errorDetails}`);
                        }

                    } catch (e) {
                        console.error(e);
                        this.error = 'Não foi possível gerar a sugestão. Por favor, tente novamente mais tarde.';
                    } finally {
                        this.isLoading = false;
                    }
                }
            }));
        });

        // Lógica para animação de fade-in ao rolar a página
        document.addEventListener('DOMContentLoaded', () => {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in-element');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });

            // Adiciona o observador a todas as seções principais
            document.querySelectorAll('section').forEach(section => {
                observer.observe(section);
            });
        });
    </script>
</body>
</html>
